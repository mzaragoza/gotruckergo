%html{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    / @font-face Fonts
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600", :rel => "stylesheet"}/
    / Stylesheets
    %link{:href => "/assets/public/assets/css/normalize.css", :rel => "stylesheet"}/
    %link{:href => "/assets/public/assets/css/skeleton.css", :rel => "stylesheet"}/
    %link{:href => "/assets/public/assets/css/typography.css", :rel => "stylesheet"}/
    %link{:href => "/assets/public/assets/css/layout.css", :rel => "stylesheet"}/
    %link{:href => "/assets/public/assets/css/form.css", :rel => "stylesheet"}/
    %link{:href => "/assets/public/assets/css/shortcodes.css", :rel => "stylesheet"}/
    %link{:href => "/assets/public/assets/css/elements.css", :rel => "stylesheet"}/
    %link{:href => "/assets/public/assets/css/ie.css", :rel => "stylesheet"}/
    / Icons
    %link{:href => "/assets/public/assets/icons/glyphicons/style.css", :rel => "stylesheet"}/
    %link{:href => "/assets/public/assets/icons/zocial/zocial.css", :rel => "stylesheet"}/
    %link{:href => "/assets/public/assets/icons/social/social.css", :rel => "stylesheet"}/
    / LayerSlider CSS
    %link{:href => "/assets/public/plugins/layerslider/css/layerslider.css", :rel => "stylesheet"}/
    / FlexSlider CSS
    %link{:href => "/assets/public/plugins/flexslider/flexslider.css", :rel => "stylesheet"}/
    / Magnific Popup
    %link{:href => "/assets/public/plugins/magnificpopup/jquery.magnific-popup.css", :rel => "stylesheet"}/
    / HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    %title 
      = yield :page_title
      | Go Trucker Go
    = render '/shared/analytics'
  %body
    / Main Content Wrap (1024px wide by default)
    .main-wrap
      / Header
      %header.header
        .container
          .sixteen.columns
            .header-row
              .header-col.brand
                = link_to root_path do
                  = image_tag '/assets/public/logo.png'
                %span.tagline= t(:tag_line)
              %nav.header-col.navigation
                %ul
                  %li{:class => "#{'active' if params[:controller] == 'pages' and params[:action] == 'index' }"}
                    = link_to t(:home), root_path
                  %li{:class => "#{'active' if params[:controller] == 'pages' and params[:action] == 'prices' }"}
                    = link_to t(:prices), prices_path
                  %li{:class => "#{'active' if params[:controller] == 'leads' and params[:action] == 'new' }"}
                    = link_to t(:contact_us), contact_us_path
                  %li{:class => "#{'active' if params[:controller] == 'pages' and params[:action] == 'prices' }"}
                    = link_to t(:login), users_dashboard_path
      / End Header
      / Slider Wrap
      .container
        - unless flash[:notice].blank?
          #notice
            %h3= flash[:notice]
          %br
        - unless flash[:error].blank?
          #error
            %h3= flash[:error]
          %br
        - unless flash[:alert].blank?
          #alert
            %h3= flash[:alert]
          %br
      = yield
      / End Foooter
      / Footer
      %footer.footer
        / Footer Top
        .footer-top
          .container
            / Text
            .column
              .footer-logo
                = image_tag '/assets/logo.png'
              %p= t(:about_us_text)
        / Footer Bottom
        .footer-bottom
          .container
            .eight.columns
              Copyright 2013.
              = succeed "." do
                = link_to t(:company_name), root_path
              All Rights Reserved.
            .eight.columns
              %ul.footer-nav
                %li
                  = link_to t(:home), root_path
                %li
                  = link_to t(:prices), prices_path
                %li
                  = link_to t(:about_us), about_us_path
                %li
                  = link_to t(:contact_us), contact_us_path
                %li
                  = link_to t(:help), 'https://gotruckergo.uservoice.com/', :target => '_blank'
    / jQuery
    %script{:src => "/assets/public/assets/js/jquery-1.9.1.min.js"}
    / Third Party Plugins
    %script{:src => "/assets/public/plugins/jflickrfeed/jflickrfeed.min.js"}
    %script{:src => "/assets/public/plugins/tweet/jquery.tweet.min.js"}
    %script{:src => "/assets/public/plugins/fitvids/jquery.fitvids.min.js"}
    %script{:src => "/assets/public/plugins/map/gmap3.min.js"}
    %script{:src => "/assets/public/plugins/isotope/jquery.isotope.min.js"}
    %script{:src => "/assets/public/plugins/caroufredsel/jquery.carouFredSel-6.2.0-packed.js"}
    %script{:src => "/assets/public/plugins/flexslider/jquery.flexslider-min.js"}
    %script{:src => "/assets/public/assets/js/jquery.timeline.min.js"}
    %script{:src => "/assets/public/plugins/magnificpopup/jquery.magnific-popup.min.js"}
    / LayerSlider Parallax 3D Slider
    %script{:src => "/assets/public/plugins/layerslider/js/jquery-easing-1.3.js"}
    %script{:src => "/assets/public/plugins/layerslider/js/jquerytransit.js"}
    %script{:src => "/assets/public/plugins/layerslider/js/layerslider.transitions.js"}
    %script{:src => "/assets/public/plugins/layerslider/js/layerslider.kreaturamedia.jquery.min.js"}
    / Template Script
    %script{:src => "/assets/public/assets/js/youxi.plugins.min.js"}
    %script{:src => "/assets/public/assets/js/youxi.setup.js"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js", :type => "text/javascript"}
    
    = render '/shared/uservoise'
