.row-fluid
  .mws-panel.grid_2.pull-right
    - if account.photo?
      = image_tag account.photo, :width => '500', :class => 'img-polaroid'
    - else
      = image_tag 'account-icon.png', :width => '500', :class => 'img-polaroid'
  .mws-panel.grid_6
    .mws-panel-header
      = link_to 'Edit', edit_admins_account_path(account), :class => 'btn btn-info pull-right'
      %span
        = account.name.titleize
    .mws-panel-body.no-padding
      %ul.mws-summary.clearfix
        %li
          %span.key
            = t(:id)
          %span.val
            %span.text-nowrap= account.id
        %li
          %span.key
            = t(:name)
          %span.val
            %span.text-nowrap= account.name
        %li
          %span.key
            = t(:address)
          %span.val
            %span.text-nowrap
              = account.address
              = account.address2
              = account.city
              = account.state
              = account.zip
        %li
          %span.key
            = t(:phone)
          %span.val
            %span.text-nowrap= account.phone
        %li
          %span.key
            = t(:active)
          %span.val
            %span.text-nowrap= account.active
        %li
          %span.key
            = t(:website)
          %span.val
            %span.text-nowrap= account.website
        %li
          %span.key
            = t(:users)
          %span.val
            %span.text-nowrap= account.users.count

