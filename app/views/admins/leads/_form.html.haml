= simple_form_for([:admins, lead], :html => {:class => 'form-horizontal' }) do |f|
  .mws-form-row
    %label.mws-form-label= t(:first_name)
    .mws-form-item
    = f.input :first_name, :label => false
  .mws-form-row
    %label.mws-form-label= t(:last_name)
    .mws-form-item
    = f.input :last_name, :label => false
  .mws-form-row
    %label.mws-form-label= t(:email)
    .mws-form-item
    = f.input :email, :label => false
  .mws-form-row
    %label.mws-form-label= t(:message)
    .mws-form-item
    = f.input :message, :label => false
  .mws-form-row
    %label.mws-form-label= t(:phone)
    .mws-form-item
    = f.input :phone, :label => false
  .mws-form-row
    %label.mws-form-label= t(:address)
    .mws-form-item
    = f.input :address, :label => false
  .mws-form-row
    %label.mws-form-label= t(:address2)
    .mws-form-item
    = f.input :address2, :label => false
  .mws-form-row
    %label.mws-form-label= t(:city)
    .mws-form-item
    = f.input :city, :label => false
  .mws-form-row
    %label.mws-form-label= t(:state)
    .mws-form-item
    = f.input :state, :collection => us_states,  :as => :select, include_blank: true, :label => false
  .mws-form-row
    %label.mws-form-label= t(:zip)
    .mws-form-item
    = f.input :zip, :label => false
  .mws-form-row
    %label.mws-form-label= t(:status)
    .mws-form-item
    = f.input :status, :collection => lead_status_list,  :as => :select, include_blank: false, :label => false
  .mws-form-row
    %label.mws-form-label= t(:newsletter)
    .mws-form-item
    = f.input :newsletter, :label => false
  .mws-form-row
    .mws-form-item
    = f.button :submit, :class => 'pull-right btn btn-info'

